        <TextField fx:id="kametiDurationField" layoutX="49.0" layoutY="166.0" promptText="Enter Kameti Duration" />
        <CheckBox fx:id="isPrivateCheck" layoutX="269.0" layoutY="61.0" mnemonicParsing="false" text="Should the Kameti be private" />
        <CheckBox fx:id="rule5Check" layoutX="269.0" layoutY="186.0" mnemonicParsing="false" text="All and any disputes will be managed by the Kameti Head" />
        <CheckBox fx:id="rule1Check" layoutX="269.0" layoutY="83.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="377.0" text="The payment of share needs to be made by the 15th of every month" />
