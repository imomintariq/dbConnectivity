      <ChoiceBox fx:id="kametiFrquency" layoutX="48.0" layoutY="296.0" prefWidth="150.0" />
      <Text layoutX="49.0" layoutY="288.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Payout Frequency:" />
